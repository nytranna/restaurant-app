{block content}

<div class="d-flex align-items-center justify-content-center">
    <div class="col-md-7 ">
        <div n:block="title" class="text-center">
            <h3 class="mb-0">
                {if $newsData}
                    <i class="fa-regular fa-newspaper me-2"></i>
                    Upravit článek
                {else}
                    <i class="fa-regular fa-newspaper"></i>
                    Přidat článek
                {/if}
            </h3>
        </div>
        <div class="card card-outline m-4">
            <div class="m-4">
                {control newsForm}
            </div>
        </div>
    </div>
</div>