<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">

        <title>Restaurantly Bootstrap Template - Index</title>
        <meta content="" name="description">
        <meta content="" name="keywords">

        <!-- Favicons -->
        {*<link href="{$basePath}/Restaurantly/assets/img/favicon.png" rel="icon">*}
        <link rel="icon" href="{$basePath}/pepper-hot-solid.svg" type="image/svg+xml">
        <link href="{$basePath}/Restaurantly/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

        <!-- Vendor CSS Files -->
        <link href="{$basePath}/Restaurantly/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
        <link href="{$basePath}/Restaurantly/assets/vendor/aos/aos.css" rel="stylesheet">
        <link href="{$basePath}/Restaurantly/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="{$basePath}/Restaurantly/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
        <link href="{$basePath}/Restaurantly/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
        <link href="{$basePath}/Restaurantly/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
        <link href="{$basePath}/Restaurantly/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

        <!-- Template Main CSS File -->
        <link href="{$basePath}/Restaurantly/assets/css/style.css" rel="stylesheet">


        <!-- =======================================================
        * Template Name: Restaurantly - v3.1.0
        * Template URL: https://bootstrapmade.com/restaurantly-restaurant-template/
        * Author: BootstrapMade.com
        * License: https://bootstrapmade.com/license/
        ======================================================== -->
    </head>

    <body>

        <!-- ======= Top Bar ======= -->
        <div id="topbar" class="d-flex align-items-center fixed-top">
            <div class="container d-flex justify-content-center justify-content-md-between">
                <div class="contact-info d-flex align-items-center">
                    <i class="bi bi-phone d-flex align-items-center"><span>{$restaurant->phone}</span></i>
                    <i class="bi bi-clock d-flex align-items-center ms-4">
                        <span> 
                            {foreach $openingHourToday as $h}
                                {if $h->is_closed}
                                    Dnes: Zavřeno
                                {else}
                                    Dnes: {$h->opening_hour}-{$h->closing_hour}
                                {/if}
                            {/foreach}
                        </span></i>
                </div>
            </div>
        </div>

        <!-- ======= Header ======= -->
        <header id="header" class="fixed-top d-flex align-items-cente">
            <div class="container-fluid container-xl d-flex align-items-center justify-content-lg-between">

                <h1 class="logo me-auto me-lg-0"><a n:href="Home:default">{$restaurant->name}</a></h1>

                <nav id="navbar" class="navbar order-last order-lg-0">
                    <ul>
                        {foreach $webSections as $s}
                            {if $s->is_shown}
                                <li>
                                    <a class="nav-link scrollto" href="#{$s->href}">{$s->name}</a>
                                </li>
                            {/if}
                        {/foreach}
                    </ul>
                    <i class="bi bi-list mobile-nav-toggle"></i>
                </nav><!-- .navbar -->
                <a href="#reservation" class="book-a-table-btn scrollto d-none d-lg-flex">Rezervace</a>

            </div>
        </header>
        <!-- End Header -->

        <!-- ======= Hero Section ======= -->
        <section id="hero" class="d-flex align-items-center">
            <div class="container position-relative text-center text-lg-start" data-aos="zoom-in" data-aos-delay="100">
                <div class="row">
                    <div class="col-lg-8">
                        <h1>Vítejte v restauraci <span>{$restaurant->name}</span></h1>
                        <h2>{$restaurant->sentence}</h2>
                        <div class="btns">
                            <a href="#menu" class="btn-menu animated fadeInUp scrollto">Jídelní lístek</a>
                            <a href="#reservation" class="btn-book animated fadeInUp scrollto">Rezervovat</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Hero -->


        {include content}<!--main-->


        <!-- ======= Footer ======= -->
        <footer id="footer">
            <div class="container">
                <div class="copyright">
                    &copy; Copyright <strong><span>Restaurantly</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                    <!-- All the links in the footer should remain intact. -->
                    <!-- You can delete the links only if you purchased the pro version. -->
                    <!-- Licensing information: https://bootstrapmade.com/license/ -->
                    <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/restaurantly-restaurant-template/ -->
                    Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                </div>
            </div>
        </footer>
        <!-- End Footer -->

        {*div id="preloader"></div>*}
        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

        <!-- Vendor JS Files -->
        <script src="{$basePath}/Restaurantly/assets/vendor/aos/aos.js"></script>
        <script src="{$basePath}/Restaurantly/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="{$basePath}/Restaurantly/assets/vendor/glightbox/js/glightbox.min.js"></script>
        <script src="{$basePath}/Restaurantly/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
        <script src="{$basePath}/Restaurantly/assets/vendor/php-email-form/validate.js"></script>
        <script src="{$basePath}/Restaurantly/assets/vendor/swiper/swiper-bundle.min.js"></script>

        <!-- Template Main JS File -->
        <script src="{$basePath}/Restaurantly/assets/js/main.js"></script>

        <script src="https://kit.fontawesome.com/ea70a934ec.js" crossorigin="anonymous"></script>

    </body>

</html>